FROM node:19-alpine as build

WORKDIR /app

# Copy node packages and build config
COPY package*.json .
COPY tsconfig.base.json .
COPY nx.json .

# Copy target app and its libs dependencies
COPY apps/api-gateway ./apps/api-gateway
COPY libs/ ./libs

# Install packages and build the app
RUN npm install
RUN npx nx build api-gateway

# Remove symlinks generated by nx and replace with actual libraries
RUN rm -rf ./node_modules/@shifter-shop \
    && cp -r ./libs ./node_modules/@shifter-shop


FROM node:19-alpine as runner

WORKDIR /app

ENV NODE_ENV production

COPY --from=build /app/apps/api-gateway/dist .
COPY --from=build /app/node_modules ./node_modules

EXPOSE 3000

CMD ["node", "index.js"]