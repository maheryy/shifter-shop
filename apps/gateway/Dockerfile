FROM node:19-alpine as build

WORKDIR /app

# Copy node packages and build config
COPY package*.json .
COPY tsconfig.base.json .
COPY nx.json .

# Copy target app and its libs dependencies
COPY apps/gateway ./apps/gateway
COPY libs/registry ./libs/registry
COPY libs/types ./libs/types
COPY libs/errors ./libs/errors

# Install packages and build the app
RUN npm install
RUN npx nx build gateway

# Remove symlinks generated by nx and replace with actual libraries
RUN rm -rf ./node_modules/@shifter-shop \
    && cp -r ./libs ./node_modules/@shifter-shop


FROM node:19-alpine as runner

WORKDIR /app

ENV NODE_ENV production

COPY --from=build /app/apps/gateway/dist .
COPY --from=build /app/node_modules ./node_modules

EXPOSE 3000

CMD ["node", "index.js"]