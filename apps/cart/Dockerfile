FROM node:19-alpine as build

WORKDIR /app

# Copy node packages and build config
COPY package*.json .
COPY tsconfig.base.json .
COPY nx.json .

# Copy target app and its libs dependencies
COPY apps/cart ./apps/cart
COPY libs/amqp ./libs/amqp
COPY libs/svc-map ./libs/svc-map

# Install packages and build the app
RUN npm install
RUN npx nx build cart-svc

# Remove symlinks generated by nx and replace with actual libraries
RUN rm -rf ./node_modules/@shifter-shop \
    && cp -r ./libs ./node_modules/@shifter-shop


FROM node:19-alpine as runner

WORKDIR /app

ENV NODE_ENV production

COPY --from=build /app/apps/cart/dist .
COPY --from=build /app/node_modules ./node_modules

EXPOSE 3000

CMD ["node", "index.js"]