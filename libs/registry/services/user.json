{
  "name": "user",
  "path": "/users",
  "production": {
    "url": "http://user-svc:3000"
  },
  "development": {
    "url": "http://127.0.0.1:3002"
  },
  "routes": [
    {
      "method": "GET",
      "path": "/",
      "middlewares": ["auth", "roles"],
      "roles": ["ADMIN"]
    },
    {
      "method": "PATCH",
      "path": "/:id",
      "middlewares": ["auth", "roles"],
      "roles": ["ADMIN"]
    },
    {
      "method": "PATCH",
      "path": "/",
      "middlewares": ["auth"]
    },
    {
      "method": "GET",
      "path": "/:id",
      "private": true
    },
    {
      "method": "POST",
      "path": "/",
      "private": true
    },
    {
      "method": "POST",
      "path": "/search",
      "private": true
    }
  ]
}
